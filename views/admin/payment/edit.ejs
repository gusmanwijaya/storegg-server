<!DOCTYPE html>
<html lang="en">
  <!-- Header -->
  <% include ../../partials/header.ejs %>

  <body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
      <!-- Preloader -->
      <div
        class="preloader flex-column justify-content-center align-items-center"
      >
        <img
          class="animation__shake"
          src="/adminlte/dist/img/AdminLTELogo.png"
          alt="AdminLTELogo"
          height="60"
          width="60"
        />
      </div>

      <!-- Navbar -->
      <% include ../../partials/navbar.ejs %>

      <!-- Sidebar -->
      <% include ../../partials/sidebar.ejs %>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <section class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1>Jenis Pembayaran</h1>
              </div>
              <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                  <li class="breadcrumb-item"><a href="/">Home</a></li>
                  <li class="breadcrumb-item">
                    <a href="/payment">Jenis Pembayaran</a>
                  </li>
                  <li class="breadcrumb-item active">Ubah</li>
                </ol>
              </div>
            </div>
          </div>
          <!-- /.container-fluid -->
        </section>

        <!-- Main content -->
        <section class="content">
          <div class="container-fluid">
            <div class="row">
              <div class="col-12">
                <div class="card card-primary">
                  <div class="card-header">
                    <h3 class="card-title">Form Ubah Jenis Pembayaran <%= payment.type %> </h3>
                  </div>
                  <!-- /.card-header -->
                  <!-- form start -->
                  <form action="/payment/edit/<%= payment._id %>?_method=PUT" method="POST">
                    <div class="card-body">
                      <div class="form-group">
                        <label for="type">Tipe Pembayaran</label>
                        <input
                          type="text"
                          class="form-control"
                          id="type"
                          name="type"
                          placeholder="Masukkan tipe pembayaran"
                          value="<%= payment.type %>"
                          required
                        />
                      </div>

                      <div class="form-group">
                        <label for="banks">Bank</label>
                        <select
                          name="banks"
                          id="banks"
                          class="form-control"
                          multiple
                          required
                        >
                          <% banks.forEach(bank => { %>
                          <option value="<%= bank._id %>"
                              <% payment.banks.forEach(paymentBank => { %>
                               <% if (bank._id.toString() === paymentBank._id.toString()) { %>
                                selected
                               <% } %>
                              <% }) %>
                            >
                            <%= bank.nameBank %> - <%= bank.noRekening %> - <%=
                            bank.name %>
                          </option>
                          <% }) %>
                        </select>
                      </div>
                    </div>
                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary">
                        Simpan
                      </button>
                    </div>
                  </form>
                </div>
              </div>
              <!-- /.col -->
            </div>
            <!-- /.row -->
          </div>
          <!-- /.container-fluid -->
        </section>
        <!-- /.content -->
      </div>

      <!-- Footer -->
      <% include ../../partials/footer.ejs %>

      <!-- Javascript -->
      <% include ../../partials/js.ejs %>
    </div>
    <!-- ./wrapper -->
  </body>
</html>
